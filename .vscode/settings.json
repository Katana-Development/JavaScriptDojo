{
  // Zoom Settings
  "window.zoomLevel": 0.2,
  "editor.mouseWheelZoom": false,

  // Font Settings ('Editor')
  "editor.fontFamily": "'Fira Code'",
  "editor.fontLigatures": true,
  "editor.fontSize": 12,
  "editor.fontWeight": "500",
  "editor.lineHeight": 24,

  // Indentation (Tab-Button)
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.tabCompletion": "off",

  // Indentation ('Indent')
  "workbench.tree.indent": 16,
  "workbench.tree.renderIndentGuides": "always",
  "editor.renderIndentGuides": true,
  "editor.highlightActiveIndentGuide": true,
  "editor.detectIndentation": false,

  // Font Settings ('Terminal')
  "terminal.integrated.fontFamily": "Hasklig",
  "terminal.integrated.fontWeight": "600",
  "terminal.integrated.fontWeightBold": "900",

  // Workbench Window-Tabs Settings
  "workbench.editor.showIcons": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.pinnedTabSizing": "compact",

  // Line-Wrapping (Standard-Languages)
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 85,
  "editor.wrappingIndent": "same",

  // Line-Wrapping (Markup)
  "html.format.wrapLineLength": 120,
  "html.format.wrapAttributes": "preserve-aligned",

  // Line-Folding
  "editor.folding": true,
  "editor.foldingHighlight": true,
  "editor.foldingStrategy": "indentation",
  "editor.showFoldingControls": "always",

  // Gutter Settings (Line-Numbers/Line-Highlighting)
  "editor.lineNumbers": "on",
  "editor.renderLineHighlight": "all",
  "scm.diffDecorationsGutterWidth": 2,
  "scm.diffDecorationsGutterVisibility": "always",

  // Overview Ruler
  "editor.hideCursorInOverviewRuler": false,
  "editor.overviewRulerBorder": true,
  "editor.rulers": [85],

  // Mini-Map
  "editor.minimap.maxColumn": 64, 
  "editor.minimap.scale": 2,
  "editor.minimap.showSlider": "always",
  "editor.minimap.size": "proportional",

  // Miscellaneous
  "editor.accessibilitySupport": "off"
}
